{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " initrd=/install/initrd.gz",
        " auto-install/enable=true",
        " debconf/priority=critical",
        " locale=en_GB",
        " file=/media/vsphere_ubuntu_preseed.cfg",
        "<enter><wait>"
      ],
      "boot_order": "disk,cdrom",
      "floppy_files": [
        "src/vsphere_ubuntu_preseed.cfg"
      ],
      "insecure_connection": true,
      "type": "vsphere-iso",
      "datacenter": "SCP_Datacenter",
      "vcenter_server": "192.168.146.70",
      "username": "administrator@rnvcentre.local",
      "password": "Password123456!",
      "cluster": "SCP_Cluster",
      "datastore": "vsanDatastore",
      "network_adapters": [
        {
          "network": "VM Network",
          "network_card": "vmxnet3"
        }
      ],
      "guest_os_type": "ubuntu64Guest",
      "host": "192.168.146.71",
      "http_directory": "src",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "resource_pool": "build_pool",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_handshake_attempts": "20",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_username": "ubuntu",
      "ssh_password": "mpxPIkhhZWINu5kmwQSxpEyqMCVutPOpKNc39adiOV0=",
      "convert_to_template": true,
      "folder": "Templates",
      "CPUs": 2,
      "RAM": 2048,
      "RAM_reserve_all": true,
      "storage": [
        {
          "disk_size": "81920",
          "disk_thin_provisioned": true
        }
      ],
      "vm_name": "{{user `ova_file_name`}}"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "pwd;ls -l"
      ],
      "type": "shell"
    },
    {
      "playbook_file": "ansible-provisioner/base.yml",
      "extra_arguments": ["-u", "ubuntu", "-e", "ansible_python_interpreter=/usr/bin/python3", "-v"],
      "type": "ansible"
    },
    {
      "type": "shell",
      "script": "scripts/vsphere_ubuntu_vmware.sh"
    },
    {
      "playbook_dir": "ansible-provisioner",
      "playbook_file": "ansible-provisioner/ubuntu_CIS_hardening.yml",
      "role_paths": [
        "ansible-provisioner/roles"
      ],
      "type": "ansible-local"
    },
    {
      "expect_disconnect": "true",
      "inline": [
        "sudo reboot"
      ],
      "inline_shebang": "/bin/bash -e",
      "type": "shell"
    },
    {
      "pause_before": "30s",
      "playbook_dir": "ansible-provisioner",
      "playbook_file": "ansible-provisioner/{{user `playbook_file`}}",
      "role_paths": [
        "ansible-provisioner/roles"
      ],
      "type": "ansible-local"
    },
    {
      "expect_disconnect": "true",
      "inline": [
        "sudo reboot"
      ],
      "inline_shebang": "/bin/bash -e",
      "type": "shell"
    },
    {
      "script": "scripts/ubuntu_cleanup.sh",
      "type": "shell"
    }
  ],
  "sensitive-variables": [
    "initial_password",
    "vcenter_password"
  ],
  "variables": {
    "initial_password": "",
    "playbook_file": "",
    "disk_size": "",
    "memory": "",
    "vcenter_server_ip": "",
    "vcenter_build_node_ip": "",
    "vcenter_password": "",
    "vcenter_username": "",
    "vcenter_datacenter": "",
    "vcenter_cluster": "",
    "vcenter_datastore": "",
    "vcenter_network_name": "",
    "vsphere-folder": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_file": "",
    "ova_file_name": ""
  }
}
